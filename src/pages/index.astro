---
import BaseLayout from '../layouts/base.astro'
import Header from '../components/Header'
import Navbar from '../components/Navbar'
import Card from '../components/Card'
import OnlineIcon from '../components/assets/icon-online.svg'
import BudgetingIcon from '../components/assets/icon-budgeting.svg'
import OnboardingIcon from '../components/assets/icon-onboarding.svg'
import ApiIcon from '../components/assets/icon-api.svg'
import Articles from '../components/Articles'
import './_index.css'
import Footer from '../components/Footer'


const merchantItems = [
	{
		iconSrc: OnlineIcon.src,
		title: "Online Banking",
		text: "Our modern web and mobile applications allow you to keep track of your finances wherever you are in the world."
	}, { 
		iconSrc: BudgetingIcon.src,
		title: "Simple Budgeting",
		text: "See exactly where your money goes each month. Receive notifications when you’re close to hitting your limits."
	}, { 
		iconSrc: OnboardingIcon.src,
		title: "Fast Onboarding",
		text: "We don’t do branches. Open your account in minutes online and start taking control of your finances right away."
	}, { 
		iconSrc: ApiIcon.src,
		title: "Open API",
		text: "Manage your savings, investments, pension, and much more from one account. Tracking your money has never been easier."
	}
]
---


<BaseLayout>
	<Navbar client:visible />
	<Header />
	<main>
		<div class="w-screen py-10 pl-[5dvw]">
			<h1 class="text-3xl py-4">Why choose Easybank?</h1>
			<p>We leverage Open Banking to turn your bank account into your financial hub.<br/> Control your finances like never before.</p>
			<div class="merchant-cards w-full py-6 flex flex-wrap gap-3">
				{ merchantItems.map(item => <Card icon_src={item.iconSrc} title={item.title} text={item.text} />) }
			</div>
		</div>
		<Articles title='Latest Articles' />
	</main>
	<Footer />
</BaseLayout>